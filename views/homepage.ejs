<!doctype html>
<html lang="en">

<head>
    <title>Homepage</title>
    <%- include('./partials/head') %>
    <link rel="stylesheet" href="/homepage.css">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .card {
            height: 100%;
            display: flex;
            flex-direction: column;
            border: 1px solid #ddd;
            border-radius: 8px;
            overflow: hidden;
        }

        .card-img-top {
            width: 100%;
            height: 200px; /* Adjust as needed to maintain uniformity */
            object-fit: cover; /* Ensures the image covers the entire space */
            border-bottom: 1px solid #ddd;
        }

        .card-body {
            flex: 1;
            padding: 15px;
            display: flex;
            flex-direction: column;
        }

        .card-title {
            font-size: 18px;
            font-weight: bold;
            margin-bottom: 10px;
        }

        .card-text {
            flex: 1;
            overflow: hidden;
            text-overflow: ellipsis;
            line-height: 1.5; /* Adjust line height for readability */
            display: -webkit-box;
            -webkit-line-clamp: 6; /* Number of lines to show before truncating */
            -webkit-box-orient: vertical;
        }

        .btn-primary {
            align-self: flex-end;
        }
    </style>
</head>

<body>
    <%- include('./partials/nav') %>

    <div class="container mt-3">
        <div class="row">
            <% blogs.forEach(blog => { %>
                <div class="col-lg-4 col-md-6 mb-3">
                    <div class="card">
                        <img src="<%- blog.coverPictureUrl %>" class="card-img-top" alt="Blog Cover">
                        <div class="card-body">
                            <h5 class="card-title"><%- blog.title %></h5>
                            <p class="card-text"><%- blog.body %></p>
                            <a href="/blog/<%- blog._id %>" class="btn btn-primary">Go to Blog</a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>

    <%- include('./partials/scripts') %>
    <script src="/homepage.js"></script>
</body>

</html>
